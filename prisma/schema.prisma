generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  mobile    String
  createdAt DateTime @default(now())
}


model Order {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  razorpayOrderId   String
  razorpayPaymentId String
  razorpaySignature String
  userName          String
  userEmail         String
  phoneNumber       String
  address           String
  pincode           String
  products          Json
  amount            Int
  paymentStatus     String   @default("pending")
}

model vendorproduct {
  id         Int      @id @default(autoincrement())
  proname    String
  prodetails String
  categroy   String
  price      Int
  warranty   String
  createdAt  DateTime @default(now())
  image      String?
}
model vendor {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
  phone    String
  status   String @default("pending")
  createdAt DateTime @default(now())
}
model admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
  phone    String
}